[flake8]
# Maximum line length (Black compatible)
max-line-length = 88

# Exclude directories and files
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .env,
    migrations,
    node_modules,
    .pytest_cache,
    build,
    dist,
    *.egg-info

# Ignore specific error codes
ignore = E203,E501,W503,E402,F401

# Per-file ignores
per-file-ignores =
    __init__.py:F401,F403
    models.py:F401
    test_*.py:F401,F403,E501
    conftest.py:F401,F403

# Maximum cyclomatic complexity
max-complexity = 12

# Enable counting and statistics
count = True
statistics = True
show-source = True

# Additional checks
select = E,W,F,C

# Format output
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
