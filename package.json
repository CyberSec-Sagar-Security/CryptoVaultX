{
  "name": "cryptovaultx",
  "version": "1.0.0",
  "description": "Secure file sharing application with client-side encryption",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "docker-compose up",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python app.py",
    "build": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint",
    "format": "cd frontend && npm run format",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix --prefix frontend",
      "npm run format --prefix frontend"
    ],
    "frontend/**/*.{json,css,md}": [
      "npm run format --prefix frontend"
    ]
  },
  "keywords": [
    "file-sharing",
    "encryption",
    "security",
    "react",
    "flask"
  ],
  "author": "CryptoVaultX Team",
  "license": "MIT"
}
